<div class="container">
	<div class="row" >
		<h1>Cover your page.</h1>
		<p >Cover is a one-page template for building simple and beautiful home pages. Download, edit the text, and add your own fullscreen background photo to make it your own.</p>
		<p >
			<a href="#" class="btn btn-lg btn-success" data-target="#login-modal" data-toggle="modal" >Login</a>
			<a href="#" class="btn btn-lg btn-warning" data-target="#create-user-modal" data-toggle="modal" >Sign Up</a>
		</p>
		<p><%= link_to("Don't have an account? Sign up for one here", controller: 'access', action: 'new') %></p>
		<p><%= link_to("Forgot password?", controller: 'access', action: 'forgot_password') %></p>
	</div>
</div>

<!-- Modal -->
<%= form_tag(login_path) do %>
<div id="login-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title">Login to !Zombify</h4>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<%= label_tag(:email, nil,class: "control-label") %>
					<%= text_field_tag :email, params[:email], autofocus: true, class: "form-control" %>

				</div>
				<div class="form-group">

					<%= label_tag(:password,nil, class: "control-label") %>
					<%= password_field_tag(:password, nil, class: "form-control") %>
				</div>

			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

				<%= submit_tag("Log In", class: "btn btn-primary") %>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<% end %>






<script type="text/javascript" src="jquery-2.1.0.js"></script>
<script type="text/javascript" src="bootstrap.min.js"></script>

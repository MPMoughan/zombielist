<div class="container">
	<h1>Forgot password?</h1>

	<div class="row">
		<div class="col-md-6">
			<%= form_tag '/send_reset', :method=>'post' do %>

			<%= label_tag :email %>
			<%= text_field_tag :email %>

			<%= submit_tag "Reset", class: "btn btn-large btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
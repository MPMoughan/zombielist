<%= render partial: "users/header" %>

<div class="container">
   <table>
        <thead>
          <tr>
            <th >Item</th>
            <th >Price</th>
            <th>Description</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td ><%= item.item %></td>
            <td ><%= item.price %></td>
            <td><%= item.description %></td>
            <td><%= link_to 'Delete', item_path(item), class: "btn  btn-success", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
</div>
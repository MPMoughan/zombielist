<h1>Editing location</h1>

<% if @location.errors.any? %>
  <ul class = "text-danger list-style-none">
   <%  for err in @location.errors.full_messages %>
    <li>
      <%= err%>
    </li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@location, url: user_location_path) do |f|%>
<div class = "form-group">
  <%= f.label(:location_type, class: "control-label") %>
  <%= f.text_field(:location_type, autofocus: true, class: "form-control") %>
</div>

<div class="form-group">
  <%= f.label(:name,  class: "control-label") %>
  <%= f.text_field(:name,  class: "form-control") %>
</div>

<div class="form-group">
  <%= f.label(:address,  class: "control-label") %>
  <%= f.text_field(:address,  class: "form-control") %>
</div>

<%= f.submit("Edit your location!", class: "btn btn-lg btn-info") %>
<% end %>

<%= link_to 'Back', user_locations_path %>

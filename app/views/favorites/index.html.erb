<%= render partial: "users/header" %>

<h1>Listing favorites</h1>

<table>


  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.name %></td>
        <td><%= favorite.image %></td>
        <td><%= favorite.link %></td>
        <td><%= link_to 'Show', user_favorite_path(@current_user, favorite) %></td>
        <td><%= link_to 'Edit', edit_user_favorite_path(@current_user, favorite) %></td>
        <td><%= link_to 'Destroy', user_favorite_path(@current_user, favorite), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite', new_user_favorite_path %>
